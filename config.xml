<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ombarus.dicedmfree" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dice DM Free</name>
    <description>
        A fast, simple, practical dice throwing app for all.
    </description>
    <author email="ombarus.dev@gmail.com" href="http://ombarusdev.com">
        Ombarus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icon/ios/icon-180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/icon-120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="res/icon/ios/icon-152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/icon/ios/icon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/icon-80.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/ios/icon-57.png" width="57" height="57" />
        <icon src="res/icon/ios/icon-114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/icon-152.png" width="152" height="152" />
        <!-- iPad Pro -->
        <icon src="res/icon/ios/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-87.png" width="87" height="87" />
        <icon src="res/icon/ios/icon-58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-50.png" width="50" height="50" />
        <icon src="res/icon/ios/icon-100.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/icon/ios/icon-167.png" width="167" height="167" />
		
		<!-- marketing icon 1024 -->
		<icon height="1024" width="1024" src="res/icon/ios/icon-1024.png" />
		
		<splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="FadeSplashScreenDuration" value="0" />
        <preference name="SplashScreenDelay" value="0" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/004-36.png" />
        <icon density="mdpi" src="res/icon/android/004-48.png" />
        <icon density="hdpi" src="res/icon/android/004-72.png" />
        <icon density="xhdpi" src="res/icon/android/007-96.png" />
        <preference name="SplashScreenDelay" value="0" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission" xmlns:android="http://schemas.android.com/apk/res/android">
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        </edit-config>
    </platform>
    <plugin name="cordova-plugin-shortcuts-android" spec="0.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <!--<plugin name="cordova-admob-sdk" spec="^0.20.0">
        <variable name="PLAY_SERVICES_VERSION" value="+" />
    </plugin>-->
    <plugin name="cordova-plugin-admob-free" spec="0.17.0">
        <variable name="ADMOB_APP_ID" value="ca-app-pub-8275293921068244~7115335512" />
    </plugin>
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <plugin name="cc.fovea.cordova.purchase" spec="7.2.0">
        <variable name="BILLING_KEY" value="" />
    </plugin>
    <engine name="android" spec="7.0.0" />
	<preference name="phonegap-version" value="cli-8.0.0" />
</widget>
