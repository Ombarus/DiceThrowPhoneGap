<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ombarus.dicedm" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dice DM</name>
    <description>
        A fast, simple, practical dice throwing app for all.
    </description>
    <author email="ombarus.dev@gmail.com" href="http://ombarusdev.com">
        Ombarus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon-180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon-60.png" width="60" height="60" />
        <icon src="res/ios/icon-120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon-152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icon-80.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon-57.png" width="57" height="57" />
        <icon src="res/ios/icon-114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon-152.png" width="152" height="152" />
        <!-- iPad Pro -->
        <icon src="res/ios/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon-87.png" width="87" height="87" />
        <icon src="res/ios/icon-58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/icon-50.png" width="50" height="50" />
        <icon src="res/ios/icon-100.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/ios/icon-167.png" width="167" height="167" />
		
		<splash src="res/screen/ios/ombarusdev-logo2.png" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/004-36.png" />
        <icon density="mdpi" src="res/icon/android/004-48.png" />
        <icon density="hdpi" src="res/icon/android/004-72.png" />
        <icon density="xhdpi" src="res/icon/android/007-96.png" />
    </platform>
    <plugin name="cordova-plugin-shortcuts-android" spec="^0.1.0" />
    <engine name="android" spec="^7.0.0" />
	<preference name="phonegap-version" value="cli-8.0.0" />
</widget>
