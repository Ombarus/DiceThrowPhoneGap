<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ombarus.dicedm" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dice DM</name>
    <description>
        A fast, simple, practical dice throwing app for all.
    </description>
    <author email="ombarus.dev@gmail.com" href="http://ombarusdev.com">
        Ombarus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/004-36.png" />
        <icon density="mdpi" src="res/icon/android/004-48.png" />
        <icon density="hdpi" src="res/icon/android/004-72.png" />
        <icon density="xhdpi" src="res/icon/android/007-96.png" />
    </platform>
    <plugin name="cordova-plugin-shortcuts-android" spec="^0.1.0" />
    <engine name="android" spec="^7.0.0" />
	<preference name="android-targetSdkVersion" value="android-26"/>
	<preference name="android-minSdkVersion" value="android-26"/>
	<preference name="android-build-tool" value="android-26"/>
</widget>
